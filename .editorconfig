root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
# unix-style new lines
end_of_line = lf
# editorconfig-tools is unable to ignore longs strings or urls
max_line_length = 120


[*.py]
indent_style = space
indent_size = 4

[*.sh]
tab_width = 2
indent_style = space
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0

[*.{md,txt}]
indent_size = 2
indent_style = space
max_line_length = 0
trim_trailing_whitespace = false

[Makefile]
tab_width = 2
indent_style = tab
max_line_length = 120
